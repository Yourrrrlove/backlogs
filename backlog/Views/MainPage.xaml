                    <AppBarButton x:Name="RateButton" Label="Rate and Review on the Store" Icon="Like" Click="RateButton_Click" />
                    <AppBarButton x:Name="SupportButton" Label="Support developer" Icon="MailReply" Click="SupportButton_Click" />
