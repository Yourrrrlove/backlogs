                                                            <VisualState.StateTriggers>
                                                                <AdaptiveTrigger MinWindowWidth="0" />
                                                            </VisualState.StateTriggers>
                                                            <VisualState.Setters>
                                                                <Setter Target="rootGrid.Width" Value="Auto" />
                                                                <Setter Target="rootGrid.Height" Value="Auto" />
                                                            </VisualState.Setters>
                                                        </VisualState>
                                                    </VisualStateGroup>
                                                </VisualStateManager.VisualStateGroups>

                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>

                                                <Grid >
                                                    <Image
                                                x:Name="gridImage"
                                                Width="150" Height="150"
                                                VerticalAlignment="Center"
                                                AutomationProperties.Name="{x:Bind Name}"
                                                Source="{x:Bind ImageURL}"
                                                Stretch="Uniform" />
                                                </Grid>

                                                <RelativePanel Grid.Row="1" Margin="16,6,0,0">
                                                    <TextBlock
                                                x:Name="TitleText"
                                                Style="{StaticResource BaseTextBlockStyle}"
                                                Text="{x:Bind Name}"
                                                TextLineBounds="TrimToCapHeight"
                                                TextWrapping="Wrap" />
                                                    <TextBlock x:Name="DirectorText"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Margin="0,2,8,0"
                                                RelativePanel.Below="TitleText"
                                                Text="{x:Bind Director}"/>
                                                    <TextBlock
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Margin="0,2,8,0"
                                                RelativePanel.Below="DirectorText"
                                                Text="{x:Bind TargetDate}"/>
                                                </RelativePanel>
                                            </Grid>
                                        </UserControl>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                        </StackPanel>
                    </ScrollViewer>
