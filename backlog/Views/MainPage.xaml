                <AppBarButton x:Name="SigninButton" Label="Sign-in" Icon="AddFriend" Click="SigninButton_Click" />
                <AppBarButton x:Name="ProfileButton" Label="Signed-in" Visibility="Collapsed">
                    <muxc:PersonPicture x:Name="AccountPic" Height="30" Width="30"/>
                </AppBarButton>
